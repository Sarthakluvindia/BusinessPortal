<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.sarthak.businessportal.ChooserPage"
    android:id="@+id/drawerlayout"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/blue"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <Button
            android:id="@+id/cp_nav_menu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/baseline_menu_white_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:text="Nego"
            android:textSize="20dp"/>



    </android.support.v7.widget.Toolbar>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="150dp"
                android:layout_marginRight="@dimen/fab_margin"
                android:elevation="6dp"
                android:src="@drawable/baseline_add_shopping_cart_white_36"
                android:visibility="invisible"
                app:backgroundTint="@color/red"
                app:pressedTranslationZ="12dp" />

            <TextView
                android:id="@+id/tv_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="205dp"
                android:layout_marginRight="@dimen/fab_margin"
                android:background="@android:color/white"
                android:text="Purchase"
                android:textColor="@android:color/black"
                android:visibility="invisible" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="150dp"
                android:elevation="6dp"
                android:src="@drawable/baseline_attach_money_white_36"
                android:visibility="invisible"
                app:backgroundTint="@android:color/holo_green_dark"
                app:pressedTranslationZ="12dp" />

            <TextView
                android:id="@+id/tv_expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="36dp"
                android:layout_marginRight="200dp"
                android:background="@android:color/white"
                android:text="Expenses"
                android:textColor="@android:color/black"
                android:visibility="invisible" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="75dp"
                android:layout_marginRight="125dp"
                android:elevation="6dp"
                android:src="@drawable/baseline_payment_white_18dp"
                android:visibility="invisible"
                app:backgroundTint="@android:color/holo_orange_dark"
                app:pressedTranslationZ="12dp" />

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="126dp"
                android:layout_marginRight="165dp"
                android:background="@android:color/white"
                android:text="Payments"
                android:textColor="@android:color/black"
                android:visibility="invisible" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="125dp"
                android:layout_marginRight="75dp"
                android:elevation="6dp"
                android:src="@drawable/baseline_trending_up_white_36"
                android:visibility="invisible"
                app:backgroundTint="@android:color/holo_purple"
                app:pressedTranslationZ="12dp" />

            <TextView
                android:id="@+id/tv_sales"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="170dp"
                android:layout_marginRight="120dp"
                android:background="@android:color/white"
                android:text="Sales"
                android:textColor="@android:color/black"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="414dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/plus"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="@dimen/fab_margin"
                android:elevation="6dp"
                android:src="@drawable/baseline_add_white_36"
                app:borderWidth="0dp"
                app:pressedTranslationZ="12dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/report"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:elevation="6dp"
                android:src="@drawable/baseline_file_copy_white_36"
                app:borderWidth="0dp"
                app:pressedTranslationZ="12dp" />

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="85dp"
                android:layout_marginLeft="20dp"
                android:background="@android:color/white"
                android:text="Report"
                android:textColor="@android:color/black" />

        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header_main"
        android:id="@+id/nav">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
